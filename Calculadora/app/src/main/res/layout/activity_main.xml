<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="0dp">

    <EditText
        android:id="@+id/caja"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:text="0"
        android:layout_margin="0dp"
        android:textSize="50dp"        />
    <GridLayout
        android:layout_marginTop="120dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <Button
            android:id="@+id/suma"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="+"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_columnWeight="0.25"
            />

        <Button
            android:id="@+id/resta"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="-"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_columnWeight="0.25"/>
        <Button
            android:id="@+id/multiplicacion"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="x"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_columnWeight="0.25"/>
        <Button
            android:id="@+id/division"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="/"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:layout_columnWeight="0.25"/>

        <Button
            android:id="@+id/siete"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/ocho"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="8"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/nueve"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="9"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/borrauno"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="D"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/cuatro"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:layout_row="2"
            android:layout_column="0"
            android:text="4"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/cinco"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="5"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/seis"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="6"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/borratodo"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="CE"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/uno"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:layout_row="3"
            android:layout_column="0"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/dos"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="2"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/tres"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="3"
            android:textColor="#ffffff"
            android:textSize="35dp" />
        <Button
            android:id="@+id/punto"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="."
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/cero"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:layout_row="4"
            android:layout_column="0"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="35dp" />

        <Button
            android:id="@+id/igual"
            android:layout_width="0dp"
            android:layout_columnWeight="0.25"
            android:layout_height="80dp"
            android:text="="
            android:textColor="#ffffff"
            android:textSize="35dp" />



    </GridLayout>




</RelativeLayout>